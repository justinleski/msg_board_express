<html>
    <head>
        <title>Message Board</title>
    </head>

  <body>
    <div style="display: flex; flex-direction: column; ">
        <h2>Post a New Message?</h2>
        <a href="/new" style="background-color: rgb(229, 247, 247); border-radius: 1em; padding: 12px; width: 64px;">Post</a>
    </div>

    
    <% messages.map((message) => { %>
        <div style="display: flex; flex-direction: column; background-color: rgb(193, 195, 197); border-radius: 1.5em; padding: 1em; gap: 8px; margin: 16px;">
            <h2><%=message.text%></h2>
            <div style="display: flex; flex-direction: row; justify-content: space-between;">
                <h3 style="color: rgb(135, 135, 137);"><%=message.user%></h3>
                <h3 style="color: rgb(135, 135, 137)"><%=message.added%></h3>
            </div>
        </div>
    <% }) %>
  </body>
</html>
